{
  "name": "todo-md",
  "version": "0.1.0",
  "description": "TODO.md viewer app.",
  "main": "lib/index.js",
  "scripts": {
    "test": "_mocha --require babel-register spec/**/*.js",
    "lib": "babel src -d lib",
    "lint": "souffle -2",
    "cov": "nyc --reporter=lcov npm test",
    "codecov": "npm run cov && codecov < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kt3k/todo-md.git"
  },
  "keywords": [
    "todo",
    "project",
    "management"
  ],
  "author": "Yoshiya Hinosawa <stibium121@gmail.com> (https://twitter.com/kt3k)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kt3k/todo-md/issues"
  },
  "homepage": "https://github.com/kt3k/todo-md#readme",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "bootstrap": "^3.3.6",
    "chai": "^3.5.0",
    "codecov.io": "^0.1.6",
    "jquery": "^2.2.2",
    "js-yaml": "^3.5.5",
    "marked": "^0.3.5",
    "mocha": "^2.4.5",
    "nyc": "^6.1.1",
    "souffle-cli": "^3.1.0"
  },
  "souffle": {
    "globals": [
      "describe",
      "it"
    ]
  },
  "nyc": {
    "exclude": [
      "spec"
    ]
  }
}
